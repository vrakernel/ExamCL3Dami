<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchJsonActitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_margin="40dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODOS"
            android:layout_marginBottom="20dp"
            android:textSize="50dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="79dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find by ID:"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/idTodo"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20sp"
            android:hint="ID"
            android:layout_marginBottom="10dp"
            android:inputType="text"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:backgroundTint="#ea4f01"
            android:text="SEARCH" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/database"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/titleTodo"
            android:layout_width="match_parent"
            android:textSize="20sp"

            android:hint="Find By ID"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed:"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/completedTodo"
            android:layout_width="match_parent"
            android:hint="Find By ID"

            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/createTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:backgroundTint="#ea4f01"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/listTodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List All"
                android:backgroundTint="#ea4f01"
                android:layout_gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>